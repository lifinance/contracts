{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "lib": ["es2020", "DOM"],
    "types": ["node"]
  },
  "include": [
    "hardhat.config.ts",
    "./script",
    "./deploy",
    "./test",
    "typechain/**/*",
    "config"
  ]
}
