{
  "compilerOptions": {
    "target": "es2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "lib": ["es2020", "DOM"],
    "types": ["node"]
  },
  "include": ["./script", "./deploy", "./test", "typechain/**/*", "config"]
}
